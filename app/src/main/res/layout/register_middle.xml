<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:showIn="@layout/activity_register"
    tools:context=".ui.account.RegisterActivity"
    android:paddingTop="15dp">

    <TextView
        android:layout_width="150dp"
        android:layout_height="0dp"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:layout_weight="1.1"
        android:text="新用户注册"
        android:textColor="#2C3E50"
        android:textSize="28dp" />

    <!--    用户名-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center_vertical|right"
        android:orientation="horizontal"
        android:paddingRight="90dp"
        android:paddingTop="2dp"
        android:paddingBottom="2dp">
        <ImageView
            android:layout_width="25dp"
            android:layout_height="26dp"
            android:src="@drawable/reg_user"/>
        <EditText
            android:id="@+id/register_tv_user"
            android:layout_width="205dp"
            android:layout_height="30dp"
            android:background="@drawable/login_tv_border_white"
            android:hint="请输入用户名"
            android:textColorHint="#888888"
            android:textColor="#888888"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:layout_marginLeft="10dp"
            android:textSize="15dp"/>

    </LinearLayout>

    <!--    学院-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center_vertical|right"
        android:orientation="horizontal"
        android:paddingRight="90dp"
        android:paddingTop="2dp"
        android:paddingBottom="2dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:textColor="#2C3E50"
            android:textSize="18dp"
            android:text="学院"/>
        <TextView
            android:id="@+id/register_tv_school"
            android:layout_width="205dp"
            android:layout_height="30dp"
            android:gravity="center_vertical"
            android:background="@drawable/login_tv_border_white"
            android:hint="请选择学院"
            android:textColorHint="#888888"
            android:textColor="#888888"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:layout_marginLeft="10dp"
            android:textSize="15dp"/>

    </LinearLayout>

    <!--    学号-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center_vertical|right"
        android:orientation="horizontal"
        android:paddingRight="90dp"
        android:paddingTop="2dp"
        android:paddingBottom="2dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:textColor="#2C3E50"
            android:textSize="18dp"
            android:text="学号"/>
        <EditText
            android:id="@+id/register_tv_stuid"
            android:layout_width="205dp"
            android:layout_height="30dp"
            android:background="@drawable/login_tv_border_white"
            android:hint="请输入学号"
            android:textColorHint="#888888"
            android:textColor="#888888"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:layout_marginLeft="10dp"
            android:textSize="15dp"/>

    </LinearLayout>

    <!--    密码-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center_vertical|right"
        android:orientation="horizontal"
        android:paddingRight="90dp"
        android:paddingTop="2dp"
        android:paddingBottom="2dp">
        <ImageView
            android:layout_width="25dp"
            android:layout_height="26dp"
            android:src="@drawable/reg_pwd"/>
        <EditText
            android:id="@+id/register_tv_pwd"
            android:layout_width="205dp"
            android:layout_height="30dp"
            android:background="@drawable/login_tv_border_white"
            android:hint="请输入密码"
            android:inputType="textPassword"
            android:textColorHint="#888888"
            android:textColor="#888888"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:layout_marginLeft="10dp"
            android:textSize="15dp"/>

    </LinearLayout>

    <!--    验证密码-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center_vertical|right"
        android:orientation="horizontal"
        android:paddingRight="90dp"
        android:paddingTop="2dp"
        android:paddingBottom="2dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:textColor="#2C3E50"
            android:textSize="18dp"
            android:text="确认密码"/>
        <EditText
            android:id="@+id/register_tv_ensure"
            android:layout_width="205dp"
            android:layout_height="30dp"
            android:background="@drawable/login_tv_border_white"
            android:hint="请再次输入密码"
            android:inputType="textPassword"
            android:textColorHint="#888888"
            android:textColor="#888888"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:layout_marginLeft="10dp"
            android:textSize="15dp"/>

    </LinearLayout>

    <!--    手机号-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center_vertical|right"
        android:orientation="horizontal"
        android:paddingRight="90dp"
        android:paddingTop="2dp"
        android:paddingBottom="2dp">
        <ImageView
            android:layout_width="27dp"
            android:layout_height="30dp"
            android:src="@drawable/reg_tel"/>
        <EditText
            android:id="@+id/register_tv_tel"
            android:layout_width="205dp"
            android:layout_height="30dp"
            android:background="@drawable/login_tv_border_white"
            android:hint="请输入手机号"
            android:textColorHint="#888888"
            android:textColor="#888888"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:layout_marginLeft="10dp"
            android:textSize="15dp"/>

    </LinearLayout>

    <!--    验证码-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center_vertical|right"
        android:orientation="horizontal"
        android:paddingRight="90dp"
        android:paddingTop="2dp"
        android:paddingBottom="2dp">
        <EditText
            android:id="@+id/register_tv_code"
            android:layout_width="112dp"
            android:layout_height="30dp"
            android:background="@drawable/login_tv_border_white"
            android:hint="请输入验证码"
            android:textColorHint="#888888"
            android:textColor="#888888"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:layout_marginLeft="10dp"
            android:textSize="15dp"/>
        <Button
            android:id="@+id/reg_code_btn"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:background="@drawable/login_bt_border_blue"
            android:text="发送验证码"
            android:layout_marginLeft="13dp"/>
    </LinearLayout>

</LinearLayout>